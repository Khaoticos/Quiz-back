datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bar {
  id                Int      @id @default(autoincrement())
  name              String
  type              String
  createdAt         DateTime @default(now())
  fullDescription   String?
  briefDescription  String?
  openingHours      String?
  address           String?
  phone             String?
  email             String?
  customUrl         String?
  quizes            Quiz[]
  
}


model Quiz {
    id                Int      @id @default(autoincrement())
    title             String
    establishmentId   Int
    establishment     Bar @relation(fields: [establishmentId], references:[id]) 
    description       String?
    themeId           Int
    theme             QuizTheme @relation(fields: [themeId], references:[id])
    externalUrl       String
}

model QuizTheme {
  id                Int      @id @default(autoincrement())
  type              String   @unique
  quizes            Quiz[]
}